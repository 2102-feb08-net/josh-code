                "CREATE SCHEMA VirtualStore;\n",
                "GO\n",
                "\n",
                "CREATE TABLE Department(\n",
                "    DepartmentID INT NOT NULL, \n",
                "    DepartmentName  NVARCHAR(50) NOT NULL CHECK(DepartmentName > 1),\n",
                "    DepartmentLocation NVARCHAR(50) NOT NULL CHECK(DepartmentLocation > 1)\n",
                "CONSTRAINT Dept_PK PRIMARY KEY(DepartmentID)\n",
                ");\n",
                "\n",
                "CREATE TABLE Employee(\n",
                "    EmployeeID INT NOT NULL, \n",
                "    FirstName  NVARCHAR(50) NOT NULL CHECK(FirstName > 1),\n",
                "    LastName  NVARCHAR(50) NOT NULL CHECK(LastName > 1),\n",
                "    SocialSecurityNum NVARCHAR(9) NOT NULL CHECK(SocialSecurityNum = 9),\n",
                "    DepartmentID INT NOT NULL\n",
                "CONSTRAINT Empl_PK PRIMARY KEY(EmployeeID)\n",
                "CONSTRAINT Empl_FK FOREIGN KEY(DepartmentID)\n",
                "REFERENCES Department(DepartmentID)\n",
                ");\n",
                "\n",
                "CREATE TABLE EmployeeDetails(\n",
                "    DetailsID INT IDENTITY,\n",
                "    EmployeeID INT NOT NULL, \n",
                "    Salary INT NOT NULL,\n",
                "    Address_1 NVARCHAR(100) NOT NULL,\n",
                "    Address_2 NVARCHAR(100),\n",
                "    City NVARCHAR(50) NOT NULL,\n",
                "    EmpState NVARCHAR(100) NOT NULL,\n",
                "    Country NVARCHAR(100)\n",
                "CONSTRAINT Deteail_PK PRIMARY KEY(DetailsID)\n",
                "CONSTRAINT Detail_FK FOREIGN KEY(EmployeeID)\n",
                "REFERENCES EMPLOYEE(EmployeeID)\n",
                ");\n",
                "\n",
                "-- Values for Department Table\n",
